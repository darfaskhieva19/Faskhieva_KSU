                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <TextBlock MouseDown="tbExportResults_MouseDown" Name="tbExportResults" Text="Эксортировать в Excel" Grid.Row="0" Style="{DynamicResource ThemeExportExcel}"/>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Поступление" Style="{DynamicResource BoldText}"/>
                        </Grid>

                        <StackPanel Grid.Row="2">
                            <DataGrid Name="dgReceiptResult" LoadingRow="dgReceipt_LoadingRow" IsReadOnly="True" ColumnWidth="1.2*" RowHeight="20" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Disabled" CanUserReorderColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Дата записи" Binding="{Binding dateReceipts}" Width="Auto"/>
                                    <DataGridTextColumn Header="№" Binding="{Binding NumberInOrder}" Width="*"/>
                                    <DataGridTextColumn Header="Источник поступления" Binding="{Binding Istochik}" Width="Auto"/>
                                    <DataGridTextColumn Header="Источник комплектования" Binding="{Binding IstochikK}"/>
                                    <DataGridTextColumn Header="Сопроводительный документ" Binding="{Binding Ins}" Width="Auto"/>
                                    <DataGridTextColumn Header="Всего поступило экз." Binding="{Binding Total}"/>
                                    <DataGridTextColumn Header="Экз." Binding="{Binding Inst}"/>
                                    <DataGridTextColumn Header="На сумму" Binding="{Binding InstCost}" Width="Auto"/>
                                    <DataGridTextColumn Header="Документы, не принятые на баланс" Binding="{Binding NotBalance}"/>
                                    <DataGridTextColumn Header="Естественные науки (2)" Binding="{Binding NaturalS}"/>
                                    <DataGridTextColumn Header="Технические науки, сельское и лесное хоз-во, медицинские науки (3,4,5)" Binding="{Binding SocialS}" />
                                    <DataGridTextColumn Header="Общественные, гуманитарные науки (6/8)" Binding="{Binding HumanitarianS}"/>
                                    <DataGridTextColumn Header="Методическая литература (74)" Binding="{Binding MetodicalS}"/>
                                    <DataGridTextColumn Header="Справочная литература (9)" Binding="{Binding ReferenceLiteratureS}"/>
                                    <DataGridTextColumn Header="Художественная литература (84)" Binding="{Binding ArtS}"/>
                                    <DataGridTextColumn Header="Печатные" Binding="{Binding printedR}"/>
                                    <DataGridTextColumn Header="Электронные" Binding="{Binding electr}"/>
                                    <DataGridTextColumn Header="Периодические издания" Binding="{Binding periodich}"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <Grid Grid.Row="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Выбытие" Style="{DynamicResource BoldText}"/>
                        </Grid>

                        <StackPanel Grid.Row="4" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                            <DataGrid Name="dgDisposalsResults" IsReadOnly="True" ColumnWidth="1.2*" RowHeight="20" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Disabled" CanUserReorderColumns="False">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Дата записи" Binding="{Binding dateDisp}" Width="Auto"/>
                                    <DataGridTextColumn Header="№ акта" Binding="{Binding ActNumber}" Width="*"/>
                                    <DataGridTextColumn Header="Общее кол-во" Binding="{Binding TotalNumber}"/>
                                    <DataGridTextColumn Header="На сумму" Binding="{Binding Price}" Width="Auto"/>
                                    <DataGridTextColumn Header="Естественные науки (2)" Binding="{Binding NaturalSocial}"/>
                                    <DataGridTextColumn Header="Технические науки, сельское и лесное хоз-во, медицинские науки (3,4,5)" Binding="{Binding Social}"/>
                                    <DataGridTextColumn Header="Общественные, гуманитарные науки (6/8)" Binding="{Binding Humanitarian}"/>
                                    <DataGridTextColumn Header="Методическая литература (74)" Binding="{Binding Metodical}" />
                                    <DataGridTextColumn Header="Справочная литература (9)" Binding="{Binding ReferenceLiterature}"/>
                                    <DataGridTextColumn Header="Художественная литература (84)" Binding="{Binding Art}"/>
                                    <DataGridTextColumn Header="Печатные" Binding="{Binding printed}"/>
                                    <DataGridTextColumn Header="Электронные" Binding="{Binding Electronic}"/>
                                    <DataGridTextColumn Header="Периодические издания" Binding="{Binding Period}"/>
                                    <DataGridTextColumn Header="Ветхость" Binding="{Binding causes}"/>
                                    <DataGridTextColumn Header="Устарелость" Binding="{Binding obsolescence}"/>
                                    <DataGridTextColumn Header="Дефектность" Binding="{Binding defectiveness}"/>
                                    <DataGridTextColumn Header="Утрата" Binding="{Binding loss}"/>
                                    <DataGridTextColumn Header="Место выбытия" Binding="{Binding Places}" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>

                        <Button Grid.Row="5" Name="btnTotalResult" Content="Сформировать итоги" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" Style="{DynamicResource Button}" Click="btnTotalResult_Click"/>

                        <StackPanel Grid.Row="6" Name="spResults" Visibility="Collapsed">
                            <DataGrid Name="dgTotalResults" IsReadOnly="True" ColumnWidth="*" RowHeight="20" AutoGenerateColumns="False" CanUserAddRows="False" FontSize="14" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Движение фонда" Width="Auto"/>
                                    <DataGridTextColumn Header="Общее кол-во"/>
                                    <DataGridTextColumn Header="Общая стоимость"/>
                                    <DataGridTextColumn Header="Естественные науки (2)"/>
                                    <DataGridTextColumn Header="Технические науки, сельское и лесное хоз-во, медицинские науки (3,4,5)"/>
                                    <DataGridTextColumn Header="Общественные, гуманитарные науки (6/8)"/>
                                    <DataGridTextColumn Header="Методическая литература (74)"/>
                                    <DataGridTextColumn Header="Справочная литература (9)"/>
                                    <DataGridTextColumn Header="Художественная литература (84)"/>
                                    <DataGridTextColumn Header="Печатные"/>
                                    <DataGridTextColumn Header="Электронные"/>
                                    <DataGridTextColumn Header="Периодические издания"/>
                                    <DataGridTextColumn Header="Примечания" Width="Auto"/>
                                </DataGrid.Columns>
                            </DataGrid>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
